{
  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 1,
    "refresh_interval": "120s",
    "max_result_window": 10000
  },
  "aliases": {
    "person": {}
  },
  "mappings": {
    "properties": {
      "name": {"type": "text"},
      "age": {"type": "integer"},
      "birth": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss"
      },
      "bool": {"type": "boolean"},
      "address": {
        "type": "object",
        "properties": {
          "city": {"type": "text"},
          "state": {"type": "keyword"}
        }
      },
      "car": {
        "type": "nested",
        "properties": {
          "brand": {"type": "text"},
          "colour": {"type": "keyword"},
          "model": {"type": "keyword"}
        }
      }
    }
  }
}